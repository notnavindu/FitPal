<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstVisit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingTop="3dp"
            android:src="@drawable/back_button"
            android:contentDescription="@string/backBtn" />

        <TextView
            android:id="@+id/textView16"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/notify_button"
            android:contentDescription="@string/notify" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal" android:paddingVertical="16dp" android:paddingHorizontal="32dp" android:layout_marginVertical="6dp">

                <TextView
                    android:id="@+id/textView17"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/almost_done"
                    android:textColor="@color/black"
                    android:textSize="24sp"

                    />

                <TextView
                    android:id="@+id/textView18"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_visit_topic_description"
                    android:textAlignment="center"
                    android:paddingTop="4dp"
                    />

                <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingHorizontal="8dp" android:paddingTop="16dp">


                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingVertical="4dp">
                        <TextView
                            android:id="@+id/textView20"
                            android:fontFamily="@font/poppins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nick_name"
                            android:paddingVertical="8dp"
                            android:textColor="@color/orange_dark"
                            />

                        <EditText
                            android:id="@+id/nameInput"
                            android:fontFamily="@font/poppins"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:textSize="12sp"
                            android:hint="@string/name_hint"
                            android:textColorHint="@color/orange_light"
                            android:background="@drawable/input_field"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            android:autofillHints="name" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingVertical="4dp">
                        <TextView
                            android:id="@+id/textView21"
                            android:fontFamily="@font/poppins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/birthday"
                            android:paddingVertical="8dp"
                            android:textColor="@color/orange_dark"
                            />

                        <EditText
                            android:id="@+id/birthdayInput"
                            android:fontFamily="@font/poppins"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="date"
                            android:textSize="12sp"
                            android:hint="@string/date_hint"
                            android:textColorHint="@color/orange_light"
                            android:background="@drawable/input_field"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            android:autofillHints="day" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingVertical="4dp">
                        <TextView
                            android:id="@+id/textView22"
                            android:fontFamily="@font/poppins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gender_topic"
                            android:paddingVertical="8dp"
                            android:textColor="@color/orange_dark"
                            />

                        <EditText
                            android:id="@+id/genderInput"
                            android:fontFamily="@font/poppins"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:textSize="12sp"
                            android:hint="@string/gender_hint"
                            android:textColorHint="@color/orange_light"
                            android:background="@drawable/input_field"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            android:autofillHints="gender" />
                    </LinearLayout>

                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="4dp">
                        <LinearLayout android:layout_width="wrap_content" android:layout_alignParentStart="true" android:layout_height="wrap_content" android:orientation="vertical" android:paddingVertical="4dp">
                            <TextView
                                android:id="@+id/textView23"
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/height_topic"
                                android:paddingVertical="8dp"
                                android:textColor="@color/orange_dark"
                                />

                            <EditText
                                android:id="@+id/heightInput"
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:inputType="number"
                                android:textSize="12sp"
                                android:hint="@string/height_hint"
                                android:textColorHint="@color/orange_light"
                                android:background="@drawable/input_field"
                                android:paddingEnd="84dp"
                                android:paddingStart="16dp"
                                android:paddingVertical="4dp"
                                android:autofillHints="height"
                                />
                        </LinearLayout>
                        <LinearLayout android:layout_width="wrap_content"  android:layout_alignParentEnd="true" android:layout_height="wrap_content" android:orientation="vertical" android:paddingVertical="4dp"
                            tools:ignore="RelativeOverlap">
                            <TextView
                                android:id="@+id/textView24"
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weight_topic"
                                android:paddingVertical="8dp"
                                android:textColor="@color/orange_dark"
                                />

                            <EditText
                                android:id="@+id/weightInput"
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:inputType="number"
                                android:textSize="12sp"
                                android:hint="@string/weight_hint"
                                android:textColorHint="@color/orange_light"
                                android:background="@drawable/input_field"
                                android:paddingEnd="84dp"
                                android:paddingStart="16dp"
                                android:paddingVertical="4dp"
                                android:autofillHints="weight" />
                        </LinearLayout>
                    </RelativeLayout>

                    <Button
                        android:id="@+id/submit_btn"
                        android:fontFamily="@font/poppins_semibold"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/button"
                        android:padding="4dp"
                        android:text="@string/confirm"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/orange_medium"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>