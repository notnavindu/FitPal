<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstVisit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingTop="3dp"
            android:src="@drawable/back_button"
            android:contentDescription="@string/backBtn" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins"
            android:text="@string/profile_pic_title"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/notify_button"
            android:contentDescription="@string/notify" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal" android:paddingVertical="16dp" android:paddingHorizontal="32dp" android:layout_marginVertical="6dp">

                    <TextView
                        android:id="@+id/textView17"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_a_profile_pic"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:layout_marginBottom="18dp"

                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="16dp"
                        app:cardCornerRadius="2000dp"
                        android:layout_marginVertical="16dp">
                        <ImageView
                            android:id="@+id/profile_picture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxHeight="300dp"
                            android:minHeight="300dp"
                            android:maxWidth="300dp"
                            android:minWidth="300dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/blank_profile_pic"/>


                    </androidx.cardview.widget.CardView>



                    <Button
                        android:id="@+id/submit_btn"
                        android:fontFamily="@font/poppins_semibold"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/button"
                        android:padding="4dp"
                        android:text="@string/confirm"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/orange_medium"/>



                </LinearLayout>


            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</LinearLayout>