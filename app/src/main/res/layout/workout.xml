<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/orange_light"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/singleWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="3dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/workout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/workout1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reps_and_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="fgdfg"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:paddingRight="10dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/delete_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/orange_medium"
                android:clickable="true"
                android:contentDescription="@string/add_btn"
                android:focusable="true"
                app:elevation="0dp"
                app:srcCompat="@drawable/ic_baseline_delete_24"
                app:tint="@android:color/white" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>